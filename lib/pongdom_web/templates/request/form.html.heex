<.form let={f} for={@changeset} action={@action}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :user_id %>
  <%= number_input f, :user_id %>
  <%= error_tag f, :user_id %>

  <%= label f, :uri %>
  <%= text_input f, :uri %>
  <%= error_tag f, :uri %>

  <%= label f, :frequency_per_hour %>
  <%= number_input f, :frequency_per_hour %>
  <%= error_tag f, :frequency_per_hour %>

  <div>
    <%= submit "Save" %>
  </div>
</.form>
